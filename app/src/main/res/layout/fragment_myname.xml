<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#207bdc"
        >
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="世界之窗"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:id="@+id/img_saoyisao"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/saoyisao1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入要生成二维码的内容"
            />
        <Button
            android:id="@+id/btn_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="生成普通的二维码"
            />
        <Button
            android:id="@+id/btn_logoimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="生成带LOGO的二维码"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_round" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_bg_circle"
                android:text="退出登录"
                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>